<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_nav_bar_header"
    android:fitsSystemWindows="false"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_washing_machine" />

    <TextView style="@style/DryCleaningApp.Text.White"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/dry_cleaning_app"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView style="@style/DryCleaningApp.Text.White"
        android:id="@+id/textView"
        android:textSize="@dimen/txt_12"
        android:text="@string/developed_by_viktor_palagniuk" />
</LinearLayout>
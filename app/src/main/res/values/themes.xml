<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DryCleaningApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_jeans</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/yellow_bright</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mustard</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DryCleaningApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DryCleaningApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DryCleaningApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DryCleaningApp.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/txt_14</item>
    </style>

    <style name="DryCleaningApp.Text.Black" parent="DryCleaningApp.Text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DryCleaningApp.Text.White" parent="DryCleaningApp.Text">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>